<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/form_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:background="@color/purple_500">

            <TextView
                android:id="@+id/form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form"
                style="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white"/>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- SERVICE CONNECTION DETAILS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/form_svc_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:contentPadding="20dp"
                    app:cardElevation="3px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Application Details"
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/minimize"
                                style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                app:icon="@drawable/ic_round_minimize_24" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/form_hidable_svc_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/grey"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <ImageView
                                    android:id="@+id/form_name_icon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginRight="10dp"
                                    app:tint="@color/grey"
                                    android:src="@drawable/ic_round_account_circle_24"
                                    android:padding="5dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_toRightOf="@id/form_name_icon">

                                    <TextView
                                        android:id="@+id/form_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Full Consumer Name"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:id="@+id/form_svc_id"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="ID"/>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:id="@+id/form_loc_icon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:tint="@color/grey"
                                    android:src="@drawable/ic_sharp_location_on_24"
                                    android:layout_marginRight="10dp"
                                    android:padding="5dp"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_toRightOf="@id/form_loc_icon">

                                    <TextView
                                        android:id="@+id/form_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Address, Address, Address"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Address"/>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:id="@+id/form_contact_icon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:tint="@color/grey"
                                    android:src="@drawable/ic_round_phone_in_talk_24"
                                    android:layout_marginRight="10dp"
                                    android:padding="5dp"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_toRightOf="@id/form_contact_icon">

                                    <TextView
                                        android:id="@+id/form_contact"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="09010546521"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Contact Information"/>

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:id="@+id/form_classification_label"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_baseline_local_offer_24"
                                    android:layout_marginRight="10dp"
                                    app:tint="@color/grey"
                                    android:padding="5dp"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_toRightOf="@id/form_classification_label">

                                    <TextView
                                        android:id="@+id/form_classification"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="09010546521"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Classification of Service"/>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <include layout="@layout/form_as_installed" />

                <include layout="@layout/form_geo"/>

                <include layout="@layout/form_photos"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_baseline_save_alt_24"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>